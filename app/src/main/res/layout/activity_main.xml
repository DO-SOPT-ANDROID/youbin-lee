<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".presentation.MainActivity">


      <ImageView
          android:id="@+id/img_main_profile"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:src="@drawable/iv_my_profile"
          app:layout_constraintDimensionRatio="1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="30dp"
          android:layout_marginTop="60dp" />


    <TextView
        android:id="@+id/tv_main_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="닉네임"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_main_profile"
        app:layout_constraintTop_toTopOf="@id/img_main_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_main_profile" />

    <TextView
        android:id="@+id/tv_main_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="엥뿌피입니당"
        app:layout_constraintBottom_toBottomOf="@id/img_main_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_main_nickname"
        app:layout_constraintTop_toTopOf="@id/img_main_profile" />

    <TextView
        android:id="@+id/tv_main_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="ID"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_main_profile" />

    <TextView
        android:id="@+id/tv_main_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="아이디"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id_title" />

    <TextView
        android:id="@+id/tv_main_mbti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        tools:text="MBTI"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id" />

    <TextView
        android:id="@+id/tv_main_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        tools:text="엠비티아이"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_mbti_title" />


</androidx.constraintlayout.widget.ConstraintLayout>