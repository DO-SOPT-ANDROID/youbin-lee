<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".presentation.main.mypage.MyPageFragment">


    <ImageView
        android:id="@+id/img_my_page_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/iv_my_profile"
        android:clipToOutline="true"
        android:background="@drawable/rounded_corner_border"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp" />


    <TextView
        android:id="@+id/tv_my_page_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="닉네임"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_my_page_profile"
        app:layout_constraintTop_toTopOf="@id/img_my_page_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_my_page_profile" />

    <TextView
        android:id="@+id/tv_my_page_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="엥뿌피입니당"
        app:layout_constraintBottom_toBottomOf="@id/img_my_page_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_my_page_nickname"
        app:layout_constraintTop_toTopOf="@id/img_my_page_profile" />

    <TextView
        android:id="@+id/tv_my_page_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="ID"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_my_page_profile" />

    <TextView
        android:id="@+id/tv_my_page_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        tools:text="아이디"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_id_title" />

    <TextView
        android:id="@+id/tv_my_page_mbti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="MBTI"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_id" />

    <TextView
        android:id="@+id/tv_my_page_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        tools:text="엠비티아이"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_mbti_title" />

    <TextView
        android:id="@+id/tv_my_page_birth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Birth Day"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_mbti" />

    <TextView
        android:id="@+id/tv_my_page_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="생일을 선택하세요"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_birth_title" />

    <ImageButton
        android:id="@+id/btn_my_page_birth"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/purple"
        android:src="@drawable/ic_edit_balck_20"
        android:background="@drawable/rounded_corner_border"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_my_page_birth_title"
        app:layout_constraintTop_toTopOf="@id/tv_my_page_birth_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_my_page_birth_title"/>


    <Button
        android:id="@+id/btn_my_page_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:backgroundTint="@color/purple"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>